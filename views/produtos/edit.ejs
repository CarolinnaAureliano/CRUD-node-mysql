<%- include("../partials/header"); %>
<main class="container" style="margin-top: 50px;">
	<% if (messages.error) { %>
	<div class="alert alert-danger" role="alert"><%- messages.error %></div>
	<% } %>

        <div class="card"> 
            <div class="card-header">
                Editar Produto
            </div>
            <div class="card-body">
                <form action="/produtos/update/<%= id_produtos %>" method="post">
                    <div class="form-group">
                        <label>Nome:</label>
                        <input type="text" class="form-control" name="nome_produto" value="<%= nome_produto %>" autocomplete="off" required>
                    </div>
                    <div class="form-group">
                        <label>Status:</label>
                        <input type="text" class="form-control" name="status_produto" value="<%= status_produto %>" autocomplete="on" placeholder="1 para ativo - 0 para inativo" required>
                    </div>
                    <div class="form-group">
                        <label>Pre√ßo</label>
                        <input type="text" class="form-control" name="preco_produto" value="<%= preco_produto %>" autocomplete="off" required>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-info" value="Atualizar"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<%- include("../partials/footer"); %>
