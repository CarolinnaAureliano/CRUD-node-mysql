<%- include("../partials/header"); %>
    <main class="container" style="margin-top: 50px;">
        <% if (messages.error) { %>
            <div class="alert alert-danger" role="alert">
                <%- messages.error %>
            </div>
            <% } %>

                <div class="card">
                    <div class="card-header">
                        Adicionar Produto
                    </div>
                    <div class="card-body">
                        <form action="/produtos/add" method="post">
                            <div class="form-group">
                                <label>Nome do produto:</label>
                                <input type="text" class="form-control" name="nome_produto" value="<%= nome_produto %>"
                                    autocomplete="on" placeholder="Arroz integral" required>
                            </div>
                            <div class="form-group">
                                <label>1 para ativo - 0 para inativo</label>
                                <select class="form-control" name="status_produto" value="<%= status_produto %>"
                                    autocomplete="off" required>
                                    <option hidden>Confirmar disponibilidade com o setor responsavel</option>
                                    <option value="0">0</option>
                                    <option value="1">1</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Pre√ßo por unidade/kg</label>
                                <input type="text" class="form-control" name="preco_produto"
                                    value="<%= preco_produto %>" autocomplete="on" placeholder="10.90" required>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-success" value="Cadastrar" />
                            </div>
                        </form>
                    </div>
                </div>
    </main>
    <%- include("../partials/footer"); %>